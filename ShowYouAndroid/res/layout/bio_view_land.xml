<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/bio_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="41dp"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/bio_title_txt"/>
        <ImageView
                android:id="@+id/bio_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/bio_title"
                android:layout_alignStart="@+id/bio_title"
                android:src="@drawable/insert_image_here"/>
        <TextView
                android:id="@+id/bio_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignTop="@+id/bio_image"
                android:layout_toRightOf="@+id/bio_image"
                android:layout_toEndOf="@+id/bio_image"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp"
                android:text="@string/bio_description_txt"/>
    </RelativeLayout>
</LinearLayout>