<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/servicios_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/servicios_title_txt"

                android:layout_marginTop="36dp" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        <ImageView
                android:id="@+id/servicios_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/servicios_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/insert_image_here"/>
        <TextView
                android:id="@+id/servicios_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignTop="@+id/servicios_image"
                android:layout_toRightOf="@+id/servicios_title"
                android:layout_toEndOf="@+id/servicios_title"
                android:text="@string/servicios_description_txt" />
    </RelativeLayout>
</LinearLayout>